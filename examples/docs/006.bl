#import "std/thread"

// Worker function called from new thread.
worker :: fn (args: *u8) s32 {
    print("Thread started!\n");
    os_sleep_ms(1000.0);
    return 0;
}

main :: fn () s32 {
    // Create and execute thread without parameters.
    t :: thread_create(&worker);

    // Wait for thread.
    thread_join(t);
    print("Thread joined.\n");

    return 0;
}