#import "std/threads"
#import "std/sync"

mutex: sync.Mutex;

main :: fn () s32 {
    print("Start thread!!!\n");
    defer print("Threads joined!!!\n");

    sync.init(&mutex);
    defer sync.terminate(&mutex);

    t1 :: threads.create(&first);
    t2 :: threads.create(&second);

    threads.join(t1);
    threads.join(t2);

    return 0;
}

first :: fn (args: *u8) s32 {
    loop i := 0; i < 10; i += 1 {
        sync.lock(&mutex);
        
        print("Hello from first thread!\n");

        sync.unlock(&mutex);
        os_sleep_ms(50.0);
    }
    return 0;
}

second :: fn (args: *u8) s32 {
    loop i := 0; i < 10; i += 1 {
        sync.lock(&mutex);
        
        print("Hello from second thread!\n");

        sync.unlock(&mutex);
        os_sleep_ms(100.0);
    }
    return 0;
}
