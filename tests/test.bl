/* playground */

A :: 20;
B :: 10 + 20 * A;
C :: 123;
D :: &C;
E :: A;
F :: ^D;
G :: cast(u64) ^D;
H :: ^cast(*u64) D;
I :: 0.5f;
J :: 0.5 + 0.012;
K : bool : true;
