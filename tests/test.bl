/* playground */

#load "std/core.bl"

Foo :: struct {
    i: s32,
    j: s32
};

main :: fn () s32 {
    i := 10;
    j := 20;
    foo := {:Foo: i, j};

    test({:Foo: i, j});
    test(&{:Foo: i, j});
    return 0;
};

test :: fn (foo: Foo) {
    print("foo.i = %\n", foo.i);
    print("foo.j = %\n", foo.j);
};

test_ptr :: fn (foo: *Foo) {
    print("foo.i = %\n", foo.i);
    print("foo.j = %\n", foo.j);
};
