main :: fn () u32 {
  str := "hello world\n";
  print(str);
  return 666;
};

// array here should not be passed by value
// -> use slices
print :: fn (str: [12]u8) {
  loop i := 0; i < str.len; i += 1 {
    putchar(str[i]);
  }
};

say_hello :: fn () {
