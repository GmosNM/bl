/* playground */

#load "std/print.bl"

EntityKind :: enum {
    Player,
    Enemy,
    Building
};

Entity :: struct {
    kind: EntityKind,
    position: Vec3,
    name: string,
    eq: [4]s32,
    sl: []s32
};

main :: fn () s32 {
    print("\n\n");
    print("%\n", Entity);

    foo : Entity;
    foo.kind = EntityKind.Player;
    foo.position = {:Vec3: 125.15f, 0.53f, 12.19f };
    foo.name = "Kokot";
    foo.eq[0] = 16;
    foo.eq[1] = 43;
    foo.eq[2] = -265;
    foo.eq[3] = 0xF2;
    foo.sl.ptr = foo.eq.ptr;
    foo.sl.len = foo.eq.len;

    print("%\n", foo);

    test(10, 20, 30);

    print("\n\n");
    return 0;
};

test :: fn (args: ...) {
    print("%\n", args);
};
