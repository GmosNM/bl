/* playground */

#load "std/core.bl"

main :: fn () s32 {
  str := " - I'm glad to see this message!!!\n";
  str_slice := str_to_slice(str.ptr, str.len);
  
  loop i := 0; i < 100; i += 1 {
    print_int(i);
    print_str(str_slice);
  }

  return 0;
};

str_to_slice :: fn (str: *u8, len: usize) []u8 {
  tmp : []u8;
  tmp.ptr = str;
  tmp.len = len;
  return tmp;
};
