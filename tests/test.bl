/* playground */

#load "std/print.bl"
#load "std/memory.bl"

main :: fn () s32 {
    a := 0;
    defer {
        print("So 'a' is %\n", a);
        print("And this is the last message.\n", a);
    };

    a = 20;

    print("Value of 'a' will be printed at the scope end!\n");

    return 0;
};

// expected output:
// hello
// 3
// 2
// 1

