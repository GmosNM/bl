/* testing playground */

extern fn printf(s string, i i32) i32;

struct A {
  b B,
  x i32 = 10, // has init expr
  y i32 // should use default for i32
}

struct B {
  c C,
  x i32
}

struct C {
  x i32
}

fn main() {
  var a A;

  /* 
   * initialization list will generate temporary variable of 
   * desired type and set variable a
   */
  a = A {
    .b.x = 666,
    .b.c.x = 888,
    .x = 1,
    .y = 2
  }; 

  printf("a.x = %d\n", a.x);
  printf("a.y = %d\n", a.y);
  printf("a.b.x = %d\n", a.b.x);
  printf("a.b.c.x = %d\n", a.b.c.x);
}


