Data :: struct {
    a: s32;
    b: bool;
    c: f32;
}

d :: Data.{ 10 };

main :: fn () s32 {
    x := Data.{ x = 10, c = 20.f };
    a := Data.{};
    b := Data.{ 10, true, 0.f };
    c := Data.{ 10 };

    print("a %\n", a);
    print("b %\n", b);
    print("c %\n", c);
    print("d %\n", d);

    return 0;
}
