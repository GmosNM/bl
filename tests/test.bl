main :: fn () s32 {
  j := 666;

  if j == 667 {
    j = 10;
  } else {
    j = 20;
  }

  result := 0;
  loop x := 0; x < 10; x += 1 {
    loop y := 0; y < 10; y += 1 { 
      result += 1;
    }
  }
  
  i := foo(10, 20);
  assert(i == -10);
  say_hello();
  return i;
};

foo :: fn (i: s32, j: s32) s32 {
  return i - j;
};

bar :: fn () s32 {
  return 990;
};

putchar :: fn (c: s32) s32 #extern;

say_hello :: fn () {
  putchar(72);
  putchar(101);
  putchar(108);
  putchar(108);
  putchar(111);
  putchar(32);
  putchar(87);
  putchar(111);
  putchar(114);
  putchar(108);
  putchar(100);
  putchar(10);
};