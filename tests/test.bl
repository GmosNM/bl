constants : fn () {
  A : 666;
  B : A;
  C : B;

  True : true;

  if True {
    printf("A = %d\n", A);
    printf("B = %d\n", B);
    printf("C = %d\n", C);
  } else {
    puts("INVALID");
  }
};


structs : fn () {
  Local : struct {
    i s32,
    bar Bar
  };

  foo Foo;
  local Local;

  foo.i = 10;
  foo.j = 20;

  printf("foo.i = %d\n", foo.i);
  printf("foo.j = %d\n", foo.j);

  local.i = 666;
  local.bar.i = 10;
  local.bar.j = 20;
  printf("local.i = %d\n", local.i);
  printf("local.bar.i = %d\n", local.bar.i);
  printf("local.bar.j = %d\n", local.bar.j);

  foo_ptr := &foo;
  printf("foo_ptr->i = %d\n", foo_ptr->i);
  printf("foo_ptr->j = %d\n", foo_ptr->j);

  printf("(*foo_ptr).i = %d\n", (*foo_ptr).i);
  printf("(*foo_ptr).j = %d\n", (*foo_ptr).j);
};

Foo : struct {
  i s32,
  j s32,
  bar *Bar 
};

Bar : struct {
  i s32,
  j s32
};


