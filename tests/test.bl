main :: fn () s32 {
    foo :: "Hello"; // []u8
    bar: string;

    l, r: []u8;
    str_split(foo, &l, &r);
    str_split(bar, &l, &r);
    str_append(&bar, foo);
    str_append(&bar, bar);
    
    return 0;
}

