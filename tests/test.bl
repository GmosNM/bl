public module debug {
  extern fn printf(s string, n i32) i32;
  extern fn puts(s string) i32;

  public fn print(s string, i i32) {
    printf(s, i);
  }

  public fn println(s string) {
    puts(s);
  }
}

fn main() i32 {
  debug::println("loop");

  var i i32;

  while (i < 10) {
    i = i + 1;
    debug::print("i = %d\n", i);
  }

  /*
  loop {
    debug::println("hello");
    break;
  }
  */

  return 0;
}

