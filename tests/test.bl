/* playground */

load "std/basics.bl"

main :: fn () s32 {
  arr   : [10]s32;
  slice : []s32;

  slice.ptr = arr.ptr;
  slice.len = arr.len;

  return get_len(arr);
};

get_len :: fn (arr: []s32) usize {
  assert(arr.ptr != null);
  return arr.len;
};

