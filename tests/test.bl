 * This is Biscuit testing script.
 */

// use sdl2;

i32 main() {
  i32 wait;

  // when modules will be implemented this will be sdl2::init() in case 
  // we don't write 'use sdl2;' at the top of the file
  if (init() < 0) {
    print("cannot initialize SDL");
    abort();
  }

  ptr window = create_window("my window", 100, 100);
  ptr renderer = create_renderer(window);

  set_render_draw_color(renderer, 255, 255, 255, 255);

  loop {
    render_clear(renderer);
    pump_events();
    render_present(renderer);
    delay(16); 
    wait = wait + 1;

    if (wait > 200) {
      break;
    }
  }

  destroy_renderer(renderer);
  destroy_window(window);
  quit();

  return 0;
}

