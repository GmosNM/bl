/* file vec3f */

module bl::math {
  public struct vec3f {
    f32 x,
    f32 y,
    f32 z
  }

  impl vec3f {
    public void new(f32 x, f32 y, f32 z) {
      self.x = x;
      self.y = y;
      self.z = z;
    }
  }
}


/* file entity.bl */

use bl::math;

module bl {
  public struct entity {
    vec3f position,
    string name
    u32 hash
  }

  impl entity {
    public void new(string name, vec3f position) {
      self.name = name;
      self.position = position;

      hash = utl.str_to_hash(&self.name);
    }

    public void update(f64 delta_time) {
    }
  }
}

