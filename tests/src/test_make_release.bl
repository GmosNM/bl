#test "pointer initialization" {
    ptr: *s32;
    make(ptr, 1);
    assert(ptr != null);

    release(ptr);
    assert(ptr == null);
}

#test "pointer array" {
    ptr: *s32;
    make(ptr, 10);
    assert(ptr != null);

    release(ptr);
    assert(ptr == null);
}

#test "slice" {
    ptr: []s32;
    make(ptr, 10);
    assert(ptr.ptr != null);
    assert(ptr.len == 10);

    release(ptr);
    assert(ptr.ptr == null);
    assert(ptr.len == 0);
}

#test "make by type" {
    ptr: *s32 = auto make(s32, 10);
    assert(ptr != null);

    release(ptr);
    assert(ptr == null);
}
