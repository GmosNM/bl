#test "fundamental types" {
  _s8     s8;
  _s16    s16;
  _s32    s32;
  _s64    s64;
  _u8     u8;
  _u16    u16;
  _u32    u32;
  _u64    u64;
  _usize  usize;
  _char   char;
  _bool   bool;
  _string string;

  assert(typeof(_s8)     == TypeKind.SInt);
  assert(typeof(_s16)    == TypeKind.SInt);
  assert(typeof(_s32)    == TypeKind.SInt);
  assert(typeof(_s64)    == TypeKind.SInt);
  assert(typeof(_u8)     == TypeKind.UInt);
  assert(typeof(_u16)    == TypeKind.UInt);
  assert(typeof(_u32)    == TypeKind.UInt);
  assert(typeof(_u64)    == TypeKind.UInt);
  assert(typeof(_usize)  == TypeKind.Size);
  assert(typeof(_char)   == TypeKind.Char);
  assert(typeof(_bool)   == TypeKind.Bool);
  assert(typeof(_string) == TypeKind.String);
};

#test "fn types" {
  foo *fn ();
  bar : fn () {};
  
  assert(typeof(foo) == TypeKind.Ptr);
  assert(typeof(bar) == TypeKind.Fn);
};

#test "struct types" {
  Foo : struct { i s32 };
  
  assert(typeof(Foo) == TypeKind.Struct);
};