#private
typeinfo_s8 :: fn () #test {
    info := cast(*TypeInfoInt) typeinfo(s8);
    assert(info.base.kind == TypeKind.Int);
    assert(info.base.size_bytes == sizeof(s8));
    assert(info.bit_count == auto sizeof(s8) * 8);
    assert(info.is_signed);
}

