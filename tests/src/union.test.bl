#import "std/glm"

#private
ColliderKind :: enum {
    Rect;
    Circle;
}

Collider :: struct {
    kind: ColliderKind;
    data: union {
        rect: ColliderRect;
        circle: ColliderCircle;
    };
}

ColliderRect :: struct {
    min: glm.v2;
    size: glm.v2;
}

ColliderCircle :: struct {
    c: glm.v2;
    r: f32;
}

union_collider :: fn () #test {
    c: Collider;
    c.kind = ColliderKind.Circle;
    c.data.circle = ColliderCircle.{glm.v2.{10.f, 20.f}, 15.f};

    assert(sizeof(c.data) == sizeof(ColliderRect));
}

