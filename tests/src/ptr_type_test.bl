/*
 * Unit test
 * -----------
 * Pointer type 
 */

#load "utest.bl"

struct foo {
  a i32
}

fn main() i32 {
  var i8_ptr *i8;
  var i32_ptr *i32;
  var i64_ptr *i64;

  var foo_ptr *foo; 

  var a i32 = 10;
  i32_ptr = &a;

  var b i32 = (*i32_ptr);
  utest::assert(b == 10);

  return 0;
}

fn test(f *foo) *foo {
  return f;
}