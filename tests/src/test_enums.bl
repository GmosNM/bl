#test "local enum" {
  {
    State : enum s32 {
      A : 123,
      B : 2,
      C : 3
    };

    assert(State.A == 123);
    assert(State.B == 2);
    assert(State.C == 3);
  }

  {
    State : enum {
      A : 123,
      B,
      C : 3
    };

    assert(State.A == 123);
    assert(State.B == 124);
    assert(State.C == 3);
  }
};

