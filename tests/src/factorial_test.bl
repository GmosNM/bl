/*
 * Unit test
 * -----------
 * Factorial.
 */

extern fn printf(s string, i i32) i32;

fn main() i32 {
  printf("factorial(1) = %d\n", factorial(1));
  printf("factorial(5) = %d\n", factorial(5));
  printf("factorial(10) = %d\n", factorial(10));

  return 0;
}

fn factorial(f i32) i32 
{
  if (f == 0)  {
    return 1;
  }

  return (f * factorial(f - 1));
}
