/*
 * Unit test
 * -----------
 * Factorial.
 */

#load "std/utest.bl"
using std::utest;

module fact {
  #test 
  fn factorial_calc() i32 {
    if factorial(1) != 1 {
      return FAIL;
    }

    if factorial(5) != 120 {
      return FAIL;
    }

    if factorial(10) != 3628800 {
      return FAIL;
    }
  
    return SUCCESS;
  }
  
  fn factorial(f i32) i32 
  {
    if (f == 0)  {
      return 1;
    }
  
    return (f * factorial(f - 1));
  }
}