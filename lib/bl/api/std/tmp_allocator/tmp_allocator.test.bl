reuse_allocation_1 :: fn () #test {
    COUNT :: 100000;

    ptrs: [..]*s32;
    defer array_terminate(&ptrs);
    loop i := 0; i < COUNT; i += 1 {
        num_ptr := cast(*s32)allocate_memory(&std.tmp_allocator, sizeof(s32));
        test_not_null(num_ptr);
        test_true(is_aligned(num_ptr, alignof(s32)));
        @num_ptr = i;
        array_push(&ptrs, num_ptr);
    }    
    test_eq(ptrs.len, COUNT);
    allocated_bytes := std.tmp_allocated_bytes();
    test_true(allocated_bytes > 0);
    loop i := 0; i < ptrs.len; i += 1 {
        num_ptr :: ptrs[i];
        test_not_null(num_ptr);
        test_true(is_aligned(num_ptr, alignof(s32)));
        test_eq(@num_ptr, i);
    }    
    std.tmp_reset();
    test_true(std.tmp_allocated_bytes() > 0);
    allocated_bytes = std.tmp_allocated_bytes();

    array_clear(&ptrs);
    loop i := 0; i < COUNT; i += 1 {
        num_ptr := cast(*s32)allocate_memory(&std.tmp_allocator, sizeof(s32));
        test_not_null(num_ptr);
        test_true(is_aligned(num_ptr, alignof(s32)));
        @num_ptr = i;
        array_push(&ptrs, num_ptr);
    }    
    test_eq(ptrs.len, COUNT);
    loop i := 0; i < ptrs.len; i += 1 {
        num_ptr :: ptrs[i];
        test_not_null(num_ptr);
        test_true(is_aligned(num_ptr, alignof(s32)));
        test_eq(@num_ptr, i);
    }    
    
    std.tmp_release();
    test_eq(std.tmp_allocated_bytes(), 0);
}

test_continuous_random_allocation :: fn () #test {
     defer std.tmp_release();
     test_eq(std.tmp_allocated_bytes(), 0);
     required_bytes : usize = 0;
     loop i := 0; i < 100; i += 1 {
         allocate_bytes :: random_number(1, 1024);
         required_bytes += auto allocate_bytes;
         ptr :: allocate_memory(&std.tmp_allocator, required_bytes);
         test_not_null(ptr);
     }       
     test_gt(std.tmp_allocated_bytes(), required_bytes);
}
