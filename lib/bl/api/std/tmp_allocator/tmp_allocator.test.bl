#import "std/test"
#import "std/tmp_allocator"

main :: fn () s32 {
    return test_run();    
}

#private
simple_allocation_1 :: fn () #test {
    defer std.tmp_release();
    
    ptr :: allocate_memory(&std.tmp_allocator, 64);
    test_not_null(ptr);
}

