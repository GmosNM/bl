#import "std/thread"
#import "std/sync"

#private
THREAD_COUNT :: 8;
DATA_COUNT :: 1000;
TOTAL :: THREAD_COUNT * DATA_COUNT;
_mutex: std.Mutex;
_data: [..]s32;


worker :: fn (_: *u8) s32 {
    std.mutex_lock(&_mutex);
    defer std.mutex_unlock(&_mutex);

    loop i := 0; i < DATA_COUNT; i += 1 {
        array_push(&_data, i);
    }
    return 0;
}

mutex_test_1 :: fn () #test {
    array_init(&_data);
    defer array_terminate(&_data);
    std.mutex_init(&_mutex);
    defer std.mutex_terminate(&_mutex);
    t: [THREAD_COUNT]std.Thread;
    loop i := 0; i < t.len; i += 1 {
        tmp :: std.thread_create(&worker);
        t[i] = tmp;
    }

    std.thread_join_all(t);
    test_eq(_data.len, TOTAL);
}
