#import "std/test"
#import "std/debug_allocator"

#import "std/threads"
#import "std/sync"

main :: fn () s32 {
    DebugAllocator.init();
    defer DebugAllocator.terminate();
    return test_run();    
}

#private
THREAD_COUNT :: 8;
DATA_COUNT :: 1000;
TOTAL :: THREAD_COUNT * DATA_COUNT;
_mutex: sync.Mutex;
_data: [..]s32;


worker :: fn (_: *u8) s32 {
    sync.lock(&_mutex);
    defer sync.unlock(&_mutex);

    loop i := 0; i < DATA_COUNT; i += 1 {
        array_push(_data, i);
    }
    return 0;
}

mutex_test_1 :: fn () #test {
    array_init(_data);
    defer array_terminate(_data);
    sync.init(&_mutex);
    defer sync.terminate(&_mutex);
    t: [THREAD_COUNT]threads.Handle;
    loop i := 0; i < t.len; i += 1 {
        tmp :: threads.create(&worker);
        t[i] = tmp;
    }

    threads.join_all(t);
    test_eq(_data.len, TOTAL);
}
