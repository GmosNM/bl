#import "std/test"
#import "std/thread"
#import "std/sync"

main :: fn () s32 {
    return test_run();    
}

#private
THREAD_COUNT :: 8;
DATA_COUNT :: 1000;
TOTAL :: THREAD_COUNT * DATA_COUNT;
_mutex: Sync.Mutex;
_data: [..]s32;


worker :: fn (_: *u8) s32 {
    Sync.lock(&_mutex);
    defer Sync.unlock(&_mutex);

    loop i := 0; i < DATA_COUNT; i += 1 {
        array_push(&_data, i);
    }
    return 0;
}

mutex_test_1 :: fn () #test {
    array_init(&_data);
    defer array_terminate(&_data);
    Sync.init(&_mutex);
    defer Sync.terminate(&_mutex);
    t: [THREAD_COUNT]Thread.Handle;
    loop i := 0; i < t.len; i += 1 {
        tmp :: Thread.create(&worker);
        t[i] = tmp;
    }

    Thread.join_all(t);
    test_eq(_data.len, TOTAL);
}
