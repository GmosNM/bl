#import "std/test"
#import "std/dlib"

main :: fn () s32 {
    return test_run();    
}

#private
dl_open_test1 :: fn () #test {
    lib, err :: std.library_open("foobar");
    test_not_ok(err);
}

dl_open_test2 :: fn () #test {
    lib, err :: std.library_open();
    defer std.library_close(lib);
    test_ok(err);
    test_not_null(lib);
}

dl_sym_test1 :: fn () #test {
    lib, err1 :: std.library_open();
    defer std.library_close(lib);
    sym, err2 :: std.library_get_symbol(lib, "foobar");
    test_not_ok(err2);    
}

