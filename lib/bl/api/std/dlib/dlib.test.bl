#import "std/test"
#import "std/dlib"

main :: fn () s32 {
    return test_run();    
}

#private
dl_open_test1 :: fn () #test {
    lib, err :: Dlib.open("foobar");
    test_not_ok(err);
}

dl_open_test2 :: fn () #test {
    lib, err :: Dlib.open();
    defer Dlib.close(lib);
    test_ok(err);
    test_not_null(lib);
}

dl_sym_test1 :: fn () #test {
    lib, err1 :: Dlib.open();
    defer Dlib.close(lib);
    sym, err2 :: Dlib.get_symbol(lib, "foobar");
    test_not_ok(err2);    
}

