#import "std/test"
#import "std/debug_allocator"

#import "std/dlib"

main :: fn () s32 {
    DebugAllocator.init();
    defer DebugAllocator.terminate();
    return test_run();    
}

#private
dl_open_test1 :: fn () #test {
    lib, err :: dlib.open("foobar");
    test_not_ok(err);
}

dl_open_test2 :: fn () #test {
    lib, err :: dlib.open();
    defer dlib.close(lib);
    test_ok(err);
    test_not_null(lib);
}

dl_sym_test1 :: fn () #test {
    lib, err1 :: dlib.open();
    defer dlib.close(lib);
    sym, err2 :: dlib.get_symbol(lib, "foobar");
    test_not_ok(err2);    
}

