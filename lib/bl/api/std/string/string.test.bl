test_str_to_lower :: fn () #test {
    tmp := strings.new();
    defer strings.delete(tmp);

    strings.clear(&tmp);
    strings.append(&tmp, "");
    strings.to_lower(tmp);
    test_eq(tmp, "");

    strings.clear(&tmp);
    strings.append(&tmp, "AaAaa AAa ");
    strings.to_lower(tmp);
    test_eq(tmp, "aaaaa aaa ");

    strings.clear(&tmp);
    strings.append(&tmp, "0123456789~!@#$%^&*()_+");
    strings.to_lower(tmp);
    test_eq(tmp, "0123456789~!@#$%^&*()_+");
}

