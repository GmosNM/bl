test_str_replace1 :: fn () #test {
    tmp := strings.new();
    defer strings.delete(tmp);

    strings.clear(&tmp);
    strings.append(&tmp, "");
    test_eq(strings.replace_all(&tmp, ' ', ','), 0);
    test_eq(tmp, "");

    strings.clear(&tmp);
    strings.append(&tmp, "1 23 456 7 89 ");
    test_eq(strings.replace_all(&tmp, ' ', ','), 5);
    test_eq(tmp, "1,23,456,7,89,");

    strings.clear(&tmp);
    strings.append(&tmp, "     ");
    test_eq(strings.replace_all(&tmp, ' ', ','), 5);
    test_eq(tmp, ",,,,,");
}

test_str_replace2 :: fn () #test {
    tmp := strings.new();
    defer strings.delete(tmp);

    strings.clear(&tmp);
    strings.append(&tmp, "");
    test_eq(strings.replace_all(&tmp, ' '), 0);
    test_eq(tmp.len, 0);
    test_eq(tmp, "");

    strings.clear(&tmp);
    strings.append(&tmp, "     ");
    test_eq(strings.replace_all(&tmp, ' '), 5);
    test_eq(tmp.len, 0);
    test_eq(tmp, "");

    strings.clear(&tmp);
    strings.append(&tmp, " 12  345 6 789     ");
    test_eq(strings.replace_all(&tmp, ' '), 10);
    test_eq(tmp.len, 9);
    test_eq(tmp, "123456789");

    strings.clear(&tmp);
    strings.append(&tmp, " 12  345 6 78     9");
    test_eq(strings.replace_all(&tmp, ' '), 10);
    test_eq(tmp.len, 9);
    test_eq(tmp, "123456789");

    strings.clear(&tmp);
    strings.append(&tmp, "d, d");
    test_eq(strings.replace_all(&tmp, ' '), 1);
    test_eq(tmp.len, 3);
    test_eq(tmp, "d,d");
}

