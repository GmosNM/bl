test_str_split_by_last :: fn () #test {
    lhs: string;
    rhs: string;

    if strings.split_by_last("1234/1234", '/', &lhs, &rhs) {
        assert(lhs.len == 4);
        assert(rhs.len == 4);
    }

    if strings.split_by_last("/12341234", '/', &lhs, &rhs) {
        assert(lhs.len == 0);
        assert(rhs.len == 8);
    }

    if strings.split_by_last("12341234/", '/', &lhs, &rhs) {
        assert(lhs.len == 8);
        assert(rhs.len == 0);
    }

    if strings.split_by_last("/", '/', &lhs, &rhs) {
        assert(lhs.len == 0);
        assert(rhs.len == 0);
    }

    assert(!strings.split_by_last("12341234", '/', &lhs, &rhs));
    assert(!strings.split_by_last("", '/', &lhs, &rhs));
}

test_str_split_by_first :: fn () #test {
    lhs: string;
    rhs: string;

    if strings.split_by_first("1234/1234", '/', &lhs, &rhs) {
        assert(lhs.len == 4);
        assert(rhs.len == 4);
    }

    if strings.split_by_first("/12341234", '/', &lhs, &rhs) {
        assert(lhs.len == 0);
        assert(rhs.len == 8);
    }

    if strings.split_by_first("12341234/", '/', &lhs, &rhs) {
        assert(lhs.len == 8);
        assert(rhs.len == 0);
    }

    if strings.split_by_first("/", '/', &lhs, &rhs) {
        assert(lhs.len == 0);
        assert(rhs.len == 0);
    }

    assert(!strings.split_by_first("12341234", '/', &lhs, &rhs));
    assert(!strings.split_by_first("", '/', &lhs, &rhs));
}

test_str_compare1 :: fn () #test {
    test_true(strings.compare("hello", "hello")); 
    test_true(strings.compare("", "")); 
    test_false(strings.compare("aaaa", "bb")); 
    test_false(strings.compare("aa", "bbbb")); 
    test_false(strings.compare("", "bbbb")); 
    test_false(strings.compare("aa", "")); 
}

test_str_compare2 :: fn () #test {
    test_true(strings.compare("", "", 0)); 
    test_true(strings.compare("", "", 10)); 
    test_true(strings.compare("hello", "hello", 0)); 
    test_true(strings.compare("hello", "hello", -1)); 
    test_true(strings.compare("hello", "hello", 3)); 
    test_true(strings.compare("bbaa", "bb", 2)); 
    test_true(strings.compare("b", "b", 100)); 
    test_true(strings.compare("b", "b", 0)); 
    test_true(strings.compare("bbbb", "b", 0)); 
    test_true(strings.compare("b", "bbbb", 0)); 
    test_true(strings.compare("bbbb", "b", 1)); 
    test_true(strings.compare("b", "bbbb", 1)); 
    test_true(strings.compare("", "b", 0)); 
    test_true(strings.compare("b", "", 0)); 
    test_false(strings.compare("", "b", 1)); 
    test_false(strings.compare("b", "", 1)); 
}

