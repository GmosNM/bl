fs_file_stream_create_test2 :: fn () #test {
    using std;
    filepath :: get_dummy_filepath();
    defer std.str_delete(&filepath);
    std.remove_file(filepath);

    {
        stream, err :: open_file(filepath, std.OpenFileMode.CREATE);
        defer std.close_file(&stream);
        test_ok(err);

        // Cannot write to file when Write or Append is not specified.
        written, err2 :: std.write(&stream, "Hello!");
        test_not_ok(err2);
        test_eq(written, 0);
    }

    {
        stream, err :: open_file(filepath, make_flags(std.OpenFileMode.CREATE, std.OpenFileMode.WRITE));
        defer std.close_file(&stream);
        test_ok(err);

        written, err2 :: std.write(&stream, "Hello!");
        test_ok(err2);
        test_eq(written, 6);
    }

    { // This should reuse already created file!
        stream, err :: std.open_file(filepath, std.OpenFileMode.CREATE);
        defer std.close_file(&stream);
        test_ok(err);
        tmp := std.str_new();
        defer std.str_delete(&tmp);
        _, err_read :: std.read(&stream, &tmp);
        test_ok(err_read);
        test_eq(tmp, "Hello!");
    }
    std.remove_file(filepath);
}

