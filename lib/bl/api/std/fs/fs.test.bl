fs_validate_filename_test :: fn () #test {
    if PLATFORM == Platform.WINDOWS {
        test_false(std.validate_filename("<"));
        test_false(std.validate_filename(">"));
        test_false(std.validate_filename(":")); 
        test_false(std.validate_filename("\""));     
        test_false(std.validate_filename("/"));
        test_false(std.validate_filename("\\"));
        test_false(std.validate_filename("|")); 
        test_false(std.validate_filename("?"));        
        test_false(std.validate_filename("*"));
        test_false(std.validate_filename("\t"));
        test_false(std.validate_filename("foo<"));
