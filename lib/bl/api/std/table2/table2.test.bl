test_struct :: fn () #test {
    using std_experimental;
    Elem :: struct {
        a: s32;
        b: string_view;
        c: bool;
        d: s32;
    };

    tbl: Table(s32, Elem);
    defer tbl_terminate(&tbl);

    loop i := 0; i < TEST_COUNT; i += 1 {
        tbl_insert(&tbl, i, Elem.{ i, "hello", true, i });
    }
    test_eq(tbl.data.len, TEST_COUNT);
    loop i := 0; i != tbl.data.len; i += 1 {
        entry :: &tbl.data[i];
        test_eq(entry.value.a, entry.value.d);
    }
    loop i := 0; i < TEST_COUNT; i += 1 {
        value :: tbl_lookup(&tbl, i);
        test_eq(value.a, auto i);
        test_eq(value.a, value.d);
    }
}

