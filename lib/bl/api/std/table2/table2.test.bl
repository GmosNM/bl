test_erase_iterator :: fn () #test {
    using std;
    tbl: Table(s32, s32);
    defer tbl_terminate(&tbl);

    loop i := 0; i < TEST_COUNT; i += 1 {
        tbl_insert(&tbl, i, i);
    }
    test_eq(tbl.len, TEST_COUNT);

    it := tbl_begin(&tbl);
    loop {
        it = tbl_erase_iter(&tbl, it);
        if it == tbl_end(&tbl) { break; }
    }

    test_eq(tbl.len, 0);
    test_eq(tbl_begin(&tbl), tbl_end(&tbl));
}

