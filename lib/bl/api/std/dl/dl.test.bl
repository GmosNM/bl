#import "std/test"
#import "std/debug_allocator"

#import "std/dl"

main :: fn () s32 {
    dbgalloc_init();
    defer dbgalloc_terminate();
    return test_run();    
}

#private
dl_open_test1 :: fn () #test {
    lib, err :: Dl.open("foobar");
    test_not_ok(err);
}

dl_open_test2 :: fn () #test {
    lib, err :: Dl.open();
    defer Dl.close(lib);
    test_ok(err);
    test_not_null(lib);
}

dl_sym_test1 :: fn () #test {
    lib, err1 :: Dl.open();
    defer Dl.close(lib);
    sym, err2 :: Dl.sym(lib, "foobar");
    test_not_ok(err2);    
}

