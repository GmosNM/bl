#import "std/test"
#import "std/debug_allocator"

#import "std/dl"

main :: fn () s32 {
    dbgalloc_init();
    defer dbgalloc_terminate();
    return test_run();    
}

#private
dl_open_test1 :: fn () #test {
    lib, err :: DL.open("foobar");
    test_not_ok(err);
}

dl_open_test2 :: fn () #test {
    lib, err :: DL.open();
    defer DL.close(lib);
    test_ok(err);
    test_not_null(lib);
}

dl_sym_test1 :: fn () #test {
    lib, err1 :: DL.open();
    defer DL.close(lib);
    sym, err2 :: DL.sym(lib, "foobar");
    test_not_ok(err2);    
}

