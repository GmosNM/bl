#import "std/test"
#import "std/arg_parser"

main :: fn () s32 {
    return test_run();    
}

#private

Opt :: struct #base std.ArgParserCtx {
    about: bool;
    verbose: bool;
}

arg_parser_test1 :: fn () #test {
    parser :: std.arg_parser_new();
    defer std.arg_parser_delete(parser);

    std.arg_parser_add(
        parser,
        "-a",
        "--about",
        "Print information about application.",
        &fn (_: std.ArgParser, _: []string, ctx: *std.ArgParserCtx) (s32, Error) {
            opt: *Opt = auto ctx;
            opt.about = true;
            return 1, ok();
        });

    std.arg_parser_add(
        parser,
        "-v",
        "--verbose",
        "Toggle verbose mode.",
        &fn (_: std.ArgParser, _: []string, ctx: *std.ArgParserCtx) (s32, Error) {
            opt: *Opt = auto ctx;
            opt.verbose = true;
            return 1, ok();
        });

    std.arg_parser_print_help(parser);

    {
        opt: Opt;
        state :: std.arg_parser_run(parser, {:[]string: 0}, auto &opt);
        test_ok(state);
        test_false(opt.about);
        test_false(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[1]string: "-h"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_true(opt.help);
        test_false(opt.about);
        test_false(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[1]string: "--help"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_true(opt.help);
        test_false(opt.about);
        test_false(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[1]string: "-a"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_true(opt.about);
        test_false(opt.help);
        test_false(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[1]string: "--about"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_true(opt.about);
        test_false(opt.help);
        test_false(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[1]string: "-v"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_false(opt.about);
        test_false(opt.help);
        test_true(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[1]string: "--verbose"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_false(opt.about);
        test_false(opt.help);
        test_true(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[2]string: "-a", "-v"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_true(opt.about);
        test_false(opt.help);
        test_true(opt.verbose);
    }

    {
        opt: Opt;
        args :: {:[2]string: "--about", "--verbose"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_ok(state);
        test_true(opt.about);
        test_true(opt.verbose);
        test_false(opt.help);
    }

    {
        opt: Opt;
        args :: {:[2]string: "--about", "-verbose"};
        state :: std.arg_parser_run(parser, args, auto &opt);
        test_not_ok(state);
        test_true(opt.about);
        test_false(opt.verbose);
        test_false(opt.help);
    }
}
