build :: fn () #build_entry {
    exe :: add_executable("bl-config");
    add_unit(exe, "src/main.bl");

    switch OS_KIND {
        OSKind.Windows { target_windows(exe); }
        default        { panic("Unknown build target!"); }
    }
}

target_windows :: fn (exe: *Assembly) {
    set_output_dir(exe, "bin/win32");
}
